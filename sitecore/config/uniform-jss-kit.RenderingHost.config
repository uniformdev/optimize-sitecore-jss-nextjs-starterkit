<!--
    This is a must-to-have config file that registers uniform-jss-kit site in configuration
-->
<configuration
  xmlns:set="http://www.sitecore.net/xmlconfig/set/"
  xmlns:role="http://www.sitecore.net/xmlconfig/role/"
  xmlns:patch="http://www.sitecore.net/xmlconfig/">

  <sitecore>
    <javaScriptServices>
      <apps>
        <app name="uniform-jss-kit" 
             set:serverSideRenderingEngine="http"
             set:serverSideRenderingEngineEndpointUrl="http://localhost:3000/api/editing/render"
             set:serverSideRenderingEngineApplicationUrl="http://localhost:3000" />
      </apps>
    </javaScriptServices>
  </sitecore>
</configuration>
